<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingLeft="0dp"
    android:paddingRight="0dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20sp"
            android:gravity="center"
            android:textColor="@color/DodgerBlue"
            android:text="MY PLANNER"
            android:textSize="30sp"
            android:textStyle="bold" >
        </TextView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">



        <Button
            android:id="@+id/openHomePage"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:backgroundTint="@color/DodgerBlue"
            android:text="Back"
            style="@style/Widget.MaterialComponents.Button.Icon"
            app:icon="@drawable/ic_back"
            android:onClick="showHome"
            android:textColor="@color/White"
            android:layout_marginLeft="5sp"
            android:textSize="18sp" />

        <Button
            android:id="@+id/goToMap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginLeft="35sp"
            android:backgroundTint="@color/DodgerBlue"
            android:text="Go To Map"
            style="@style/Widget.MaterialComponents.Button.Icon"
            app:icon="@drawable/ic_map"
            android:textColor="@color/White"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <LinearLayout
            android:layout_weight="10.0"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/search"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text="ROADWORK TYPE: "
                android:textColor="@color/DodgerBlue"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/searchBySpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:spinnerMode="dropdown"
                android:textAlignment="textEnd"
                android:textSize="20sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_weight="10.0"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/startDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="START DATE: "
                android:layout_weight="1"
                android:textColor="@color/DodgerBlue"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/startDateValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="showStartDate"
                android:focusable="false"
                android:gravity="end"
                android:text="DD/MM/YYYY"
                android:textColor="#CDC9C9"
                android:textSize="20dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="10.0"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/endDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="END DATE: "
                android:layout_weight="1"
                android:textColor="@color/DodgerBlue"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/endDateValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:focusable="false"
                android:gravity="end"
                android:onClick="showEndDate"
                android:text="DD/MM/YYYY"
                android:textColor="#CDC9C9"
                android:textSize="20dp" />
        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <Button
                android:id="@+id/searchRoadWork"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="@color/DodgerBlue"
                android:text="View RoadWork"
                android:textColor="@color/White"
                android:gravity="center" style="@style/Widget.MaterialComponents.Button.Icon"
                app:icon="@drawable/ic_view"
                android:layout_marginLeft="70sp"
                android:textSize="18sp" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>

