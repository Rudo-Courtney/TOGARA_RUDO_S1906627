<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools1="http://schemas.android.com/tools"
    android:padding="5dp"
    app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehaviour"
    tools1:context=".my_DetailActivity.DetailActivity"
    android:background="@color/LightSteelBlue"
    tools1:showIn="@layout/activity_detail"

    tools1:ignore="MissingConstraints">

    <androidx.cardview.widget.CardView
        android:layout_margin="2dp"
        card_view:cardCornerRadius="10dp"
        android:backgroundTint="@color/WhiteSmoke"
        card_view:cardElevation="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1"
        >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Title"
                android:fontFamily="sans-serif"
                android:id="@+id/titleDetailTxt"
                android:padding="5dp"
                android:textColor="@color/DodgerBlue"
                android:textStyle="bold"
                android:layout_alignParentLeft="true"
                />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Description"
            android:textSize="16dp"
            android:fontFamily="sans-serif"
            android:id="@+id/descDetailTxt"
            android:padding="5dp"
            android:lines="4"
            android:textColor="@color/black"
            android:layout_alignParentLeft="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Road"
            android:fontFamily="sans-serif"
            android:id="@+id/roadDetailTxt"
            android:textSize="16dp"
            android:padding="5dp"
            android:textColor="@color/black"
            android:layout_alignParentLeft="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Region"
            android:fontFamily="sans-serif"
            android:id="@+id/regionDetailTxt"
            android:textSize="16dp"
            android:padding="5dp"
            android:textColor="@color/black"
            android:layout_alignParentLeft="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="PubDate"
            android:textSize="16dp"
            android:fontFamily="sans-serif"
            android:id="@+id/dateDetailTxt"
            android:textColor="@color/black"
            android:textStyle="italic"
            android:padding="5dp"
            />
        </LinearLayout>


</androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
